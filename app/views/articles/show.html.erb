<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>

<h2>Comments</h2>
<ul>
<% @article.comments.each do |c| %>
		<li><%= c.body %></li>
<% end %>
</ul>
<%= form_for [@article, @comment] do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_field :body %>
	</p>
	<%= f.submit "Comment" %>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
